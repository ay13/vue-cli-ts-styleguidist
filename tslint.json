{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-boolean-literal-compare": true,
    "semi": [1, "always"]
  },
  "linterOptions":{
    "exclude": [
      "./tests/**"
    ]
  }
}
